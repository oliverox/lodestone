{
  "name": "lodestone",
  "version": "0.1.0",
  "description": "A simple node themeable webapp creator",
  "main": "index.js",
  "scripts": {
    "start:dev": "better-npm-run start:dev",
    "start:prod": "better-npm-run start:prod",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "betterScripts": {
    "start:dev": {
      "command": "babel-node server.js",
      "env": {
        "NODE_ENV": "development",
        "PORT": 8080
      }
    },
    "start:prod": {
      "command": "webpack --config webpack.config.babel.js && babel-node server.js",
      "env": {
        "NODE_ENV": "production",
        "PORT": 8888
      }
    }
  },
  "author": "Oliver Oxenham",
  "license": "ISC",
  "devDependencies": {
    "babel-cli": "^6.5.1",
    "babel-core": "^6.5.2",
    "babel-loader": "^6.2.2",
    "babel-preset-es2015": "^6.5.0",
    "babel-preset-react": "^6.5.0",
    "better-npm-run": "0.0.7",
    "css-loader": "^0.23.1",
    "eslint": "^2.1.0",
    "eslint-loader": "^1.3.0",
    "eslint-plugin-react": "^4.0.0",
    "extract-text-webpack-plugin": "^1.0.1",
    "json-loader": "^0.5.4",
    "node-sass": "^3.4.2",
    "react": "^0.14.7",
    "react-dom": "^0.14.7",
    "sass-loader": "^3.1.2",
    "style-loader": "^0.13.0",
    "webpack": "^1.12.13",
    "webpack-dev-middleware": "^1.5.1",
    "webpack-hot-middleware": "^2.7.1"
  },
  "dependencies": {
    "express": "^4.13.4",
    "react-router": "^2.0.0"
  }
}
