{
    "extends": ["eslint:recommended"],
    "env": {
        "browser": true,
        "node": true,
        "es6": true
    },
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        },
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "no-extra-semi": 2,
        "semi": 2,
        "react/jsx-uses-react": 2,
        "react/react-in-jsx-scope": 2
    }
}
